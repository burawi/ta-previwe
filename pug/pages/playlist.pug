extends ../template

block sidebar
  +main-sidebar('playlist')

block content
  .page-wrapper
    .playlist-page
      .playlist-sidebar
        .playlist-thumbnail
          img(src="../assets/sample_images/v2.jpeg")
          .playlist-sidebar-play_all
            .playlist-sidebar-play_icon.mdi.mdi-play
            .playlist-sidebar-play_text= playAll
        .playlist-title= playlist
        .playlist-info
          div 15 درس
          div 80 مشاهدة
          div تم التحديث قبل أسبوع
      .playlist-list.videos-sidebar
        .playlist-list-header.mobile
          .playlist-list-header-main
            .playlist-list-title كيف أنجح في الباكالوريا
            .playlist-list-author صابر بوزايدة
            a.playlist-header-playall(href="video.html")
              .mdi.mdi-play
          .playlist-list-header-info
            .playlist-list-count= '122 ' + videos
            .playlist-list-status= nonWatched
        each i in [1,2,3,4,5,6,7]
          .playlist-list-item
            .playlist-item-number= i
            .playlist-item-content
              .video-card.video-card-landscape
                .video-card-thumbnail
                  img.video-card-image(src='../assets/sample_images/v1.jpeg')
                  .video-card-duration 8:01
                .video-card-info 
                  .video-card-title عرض شكب عالباك
                  .video-card-author فريق التسويق